<!DOCTYPE html>
<html>
    <head>
        <title>Pirate!</title>
    </head>
    <body>

        <h1>Pirate</h1>

        <div class="pirate">
            <h3>Name: <%= @pirate.name %></h3>
            <h4>Weight: <%= @pirate.weight %></h4>
            <h4>Height: <%= @pirate.height %></h4>
        </div><br>

        <h2>Ship One</h2>
        <% @ships.each do |ship| %>
            <div class="ship">
                <p>Name: <%= ship.name %></p><br>
                <p>Type: <%= ship.type %></p><br>
                <p>Booty: <%= ship.booty %></p><br>
            </div><br>
        <% end %>


        <h2>Ship Two</h2>
        <% @ships.each do |ship| %>
            <div class="ship">
                <p>Name: <%= ship.name %></p><br>
                <p>Type: <%= ship.type %></p><br>
                <p>Booty: <%= ship.booty %></p><br>
            </div><br>
        <% end %>

    </body>
</html>
